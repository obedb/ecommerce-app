<h1>All products</h1>

<div class="row">
  <% @products.each_slice(3) do |three_products| %>
    <div class="row">
        <% three_products.each do |products| %>
          <div class="col-md-4">
            <h2><%= link_to products.name, "/products/#{products.id}" %></h2>
            <img src="<%= products.image %>" class="img-responsive">
            <h2>Description: <%= products.description %></h2>
            <h2>Price: <%= products.price %></h2>
            <!-- <h2>Image: <%= products.image %></h2> -->
          </div>
        <% end %>
    </div>
  <% end %>
</div>


