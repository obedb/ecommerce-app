<h1> Edit Product </h1>

<%= form_tag "/products/#{@products.id}", method: :patch do %>

  <div>
    Name: <input type="text" name="name" value="<%= @products.name %>">
  </div>

  <div>
    Description: <input type="text" name="description" value="<%= @products.description %>">
  </div>

  <div>
    Price: <input type="text" name="price" value="<%= @products.price %>">
  </div>

  <div>
    Image: <input type="text" name="image" value="<%= @products.image %>">
  </div>

  <input type="submit" value="Update Product">

  <% end %> 